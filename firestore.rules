
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /blocos/{blocoId} {
      allow read, write: if isSignedIn();
    }

    match /setores/{setorId} {
      allow read, write: if isSignedIn();
    }

    match /salas/{salaId} {
      allow read, write: if isSignedIn();
    }

    match /patrimonios/{patrimonioId} {
      allow read, write: if isSignedIn();
      
      // Regra de escrita para a subcoleção de movimentações
      match /movements/{movementId} {
        allow create, delete: if isSignedIn();
        allow update: if false; // Garante a imutabilidade do log
      }
    }

    // Regra para a consulta collectionGroup no dashboard
    match /{path=**}/movements/{movementId} {
      allow read: if isSignedIn();
    }
  }
}
