rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /blocos/{blocoId} {
      allow read, write: if isSignedIn();
    }

    match /setores/{setorId} {
      allow read, write: if isSignedIn();
    }

    match /salas/{salaId} {
      allow read, write: if isSignedIn();
    }

    match /patrimonios/{patrimonioId} {
      allow read, create, update, delete: if isSignedIn();
    }

    // Regra para a COLEÇÃO /movimentacoes (para o Dashboard)
    match /movimentacoes {
      allow list, create: if request.auth != null;
    }

    // Regra para o DOCUMENTO /movimentacoes/{id} (para o Histórico Individual)
    match /movimentacoes/{movimentacaoId} {
      allow get, create, delete: if request.auth != null;
      allow update: if false; // Imutável
    }
  }
}
